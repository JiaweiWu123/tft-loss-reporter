{
  "compilerOptions":
    {
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "rootDir": "src",
      "outDir": "dist",
      "sourceMap": true
    },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
